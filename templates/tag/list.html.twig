{% extends 'base.html.twig' %}

{% block title %}Tag List{% endblock %}

{% block body %}
    <div class="container">
        <div class="text-center mt-4">
            <h1>Tag List</h1>
        </div>
        <div class="d-flex justify-content-start">
            <a class="btn btn-outline-success" href="{{ path('app_tag_create') }}">Create</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for tag in tags %}
                    <tr>
                        <th scope="row">{{ tag.id }}</th>
                        <td>{{ tag.name }}</td>
                        <td>
                            <a class="btn btn-outline-danger" href="{{ path('app_tag_edit', { id: tag.id }) }}">Edit</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}