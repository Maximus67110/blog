{% extends 'base.html.twig' %}

{% block title %}Tag List{% endblock %}

{% block body %}
    <div class="container">
        <div class="text-center mt-4">
            <h1>Tag List</h1>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                </tr>
            </thead>
            <tbody>
                {% for tag in tags %}
                    <tr>
                        <th scope="row">{{ tag.id }}</th>
                        <td>{{ tag.name }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}