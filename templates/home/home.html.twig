{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div class="container">
    <div class="text-center mt-4">
        <h1>Post List</h1>
    </div>
    <div class="row mt-5 mb-4">
        {% for post in posts %}
            <div class="col-md-6 col-lg-3 mb-3">
                <div class="card" style="width: 18rem;">
                    <a href="{{ path('app_post', {'slug': post.slug}) }}">
                        {% if post.image is not null %}
                            <img src="{{ post.image ? asset('uploads/' ~ post.image)}}" class="card-img-top" alt="{{ post.title }}">
                        {% else %}
                            <img src="https://picsum.photos/600/400?random={{ loop.index }}" class="card-img-top" alt="{{ post.title }}">
                        {% endif %}
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">{{ post.title }}</h5>
                        <div class="card-text">
                            <p>{{ post.createdAt|format_datetime('full', 'short', locale='fr') }} by {{ post.user.name }}</p>
                            <div>{{ post.content }}</div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
